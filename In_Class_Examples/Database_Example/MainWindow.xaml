<Window x:Class="Database_Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Database_Example"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="lstMovies" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,186,0,0"/>
        <ComboBox x:Name="cboDirector" HorizontalAlignment="Left" Margin="45,33,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboDirector_SelectionChanged"/>

    </Grid>
</Window>
